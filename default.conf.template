server {
	listen 80;

	js_import tailscale.js;

	real_ip_header $REAL_CLIENT_IP_HEADER;
	set_real_ip_from $TRUSTED_IP;

	location /_auth {
		internal;

		js_content tailscale.auth;
	}

	location / {
		auth_request /_auth;
		auth_request_set $auth $sent_http_authorization;

		proxy_pass $UPSTREAM;
		proxy_set_header Authorization $auth;
	}
}
